<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_color"
        android:layout_width="72dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ib_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:scaleType="fitXY" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_selected"
        android:layout_width="41dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="5dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@id/card_view_color"
        app:layout_constraintRight_toRightOf="@id/card_view_color"
        app:layout_constraintTop_toBottomOf="@id/card_view_color">

        <View
            android:id="@+id/view_selected_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>